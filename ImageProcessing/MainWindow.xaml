<Window x:Class="ImageProcessing.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Image Processing" Height="260" Width="400"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Button Content="Crop" HorizontalAlignment="Left" Margin="29,142,0,0" VerticalAlignment="Top" Width="75" Click="CropBtnClick"/>
        <Label Content="Rotation Angle" HorizontalAlignment="Left" Margin="150,26,0,0" VerticalAlignment="Top"/>
        <Button Content="Rotate" HorizontalAlignment="Left" Margin="157,142,0,0" VerticalAlignment="Top" Width="75" Click="RotateBtnClick"/>
        <TextBox x:Name="RotationAngleTextBox" Text="0" HorizontalAlignment="Left" Height="23" Margin="157,79,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="75" />
        <Button Content="Filtrate" HorizontalAlignment="Left" Margin="295,142,0,0" VerticalAlignment="Top" Width="75" Click="FilterBtnClick"/>
        <Label Content="Filter value" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="295,26,0,0"/>
        <TextBox x:Name="FilterValueTextBox" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="75" Margin="295,79,0,0"/>
    </Grid>
</Window>
